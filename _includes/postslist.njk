<div class="mt-6">
  {% for post in posts | reverse %}
    <article class="mt-6 pt-6 border-t border-gray-300 first:border-none">
      <header class="text-sm text-gray-500">
        <time datetime="2020-07-04T22:51:43Z">2020-07-04T22:51:43Z</time>
      </header>

      <a href="/posts/{{post.slug}}/" class="mt-2 block">
        <p class="text-xl font-semibold text-gray-900">{{post.title}}</p>
        <p class="mt-3 text-base text-gray-500">{{post.description}}</p>
      </a>

      <footer class="mt-3">
        <a href="/posts/{{post.slug}}/" class="text-base font-semibold text-indigo-600 hover:text-indigo-500">Read full story</a>
      </footer>
    </article>
  
  {% endfor %}
</div>